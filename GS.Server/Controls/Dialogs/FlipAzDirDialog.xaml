<UserControl x:Class="GS.Server.Controls.Dialogs.FlipAzDirDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:skyTelescope="clr-namespace:GS.Server.SkyTelescope"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance skyTelescope:SkyTelescopeVM}">
    <GroupBox Header="{StaticResource btnFlipAzDir}" Margin="5">
        <StackPanel Orientation="Vertical">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0" Text="{StaticResource btnContinueFlipAzDir}" TextWrapping="Wrap" Width="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button IsDefault="False" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding AcceptFlipAzDirDialogCmd}" Content="{StaticResource diaAccept}"/>
                <Button IsCancel="True" IsDefault="True" Margin="8 0 0 0" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CancelFlipAzDirDialogCmd}" Content="{StaticResource diaCancel}"/>
            </StackPanel>

        </StackPanel>
    </GroupBox>
    </UserControl>
