<UserControl x:Class="GS.Server.Controls.Dialogs.ResetSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:settings="clr-namespace:GS.Server.Settings"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance settings:SettingsVM}">
    <GroupBox Header="{StaticResource optResetSettings}" Margin="5">
        <StackPanel Orientation="Vertical">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Text="{StaticResource optAcceptResetSettings}"/>
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                <Button IsDefault="True" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding AcceptResetDialogCommand}" Content="{StaticResource diaAccept}"/>
                <Button IsCancel="True" Margin="8 0 0 0" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CancelResetDialogCommand}" Content="{StaticResource diaCancel}"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
    </UserControl>
