<UserControl x:Class="GS.Server.Controls.Telescope.StandardButtonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextOptions.TextFormattingMode="Display"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" >
        <md:Badged Badge="{Binding ParkBadgeContent}">
            <Button Margin="5" Width="100" Height="30" ToolTip="Park mount"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Command="{Binding ClickParkCommand}"
                    Content="{Binding ParkButtonContent}"/>
        </md:Badged>
        <md:Badged Badge="{Binding HomeBadgeContent}" >
            <Button Margin="5" Height="30" Width="100" ToolTip="Slew to home position"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Command="{Binding ClickHomeCommand}">
            Home
            </Button>
        </md:Badged>
            <Button Margin="5" x:Name="StopButton" Width="100" Height="30" ToolTip="Stop mount"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Command="{Binding ClickStopCommand}">
            Stop
        </Button>
        <md:Badged Badge="{Binding TrackingBadgeContent}">
            <Button Margin="5" ToolTip="Tracking on/off" Width="100" Height="30"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Command="{Binding ClickTrackingCommand}">
            Tracking
            </Button>
        </md:Badged>
        <md:DialogHost HorizontalAlignment="Center" VerticalAlignment="Bottom" CloseOnClickAway="True"
                       IsOpen="{Binding IsHomeResetDialogOpen}" DialogContent="{Binding HomeResetContent}">
            <Button Margin="5" Height="30"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Width="100" ToolTip="Reset axis positions to home"
                Command="{Binding OpenHomeResetDialogCommand}">
            Set Home
            </Button>
        </md:DialogHost>
        <md:DialogHost HorizontalAlignment="Center" VerticalAlignment="Bottom" CloseOnClickAway="True"
                       IsOpen="{Binding IsFlipDialogOpen}" DialogContent="{Binding FlipContent}">
            <Button Margin="5" Height="30"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Width="100" ToolTip="Flip Side of Pier"
                    Command="{Binding OpenFlipDialogCommand}">
                Flip SOP
            </Button>
        </md:DialogHost>
    </StackPanel>
</UserControl>
